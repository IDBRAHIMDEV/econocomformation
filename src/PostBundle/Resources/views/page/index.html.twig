{% extends 'PostBundle::base.html.twig' %}

{% block body %}

  <div class="row">
      <div class="col-md-12">
          <h1>Pages list</h1>
    <div align="right">
    <a class="btn btn-primary" href="{{ path('page_new') }}">Ajouter</a>
    </div>
     
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Body</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td><a href="{{ path('page_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                <td>{{ page.title }}</td>
                <td>{{ page.description }}</td>
                <td>{{ page.body }}</td>
                <td>
                   
                            <a class="btn btn-info" href="{{ path('page_show', { 'id': page.id }) }}">show</a>
                       
                            <a class="btn btn-warning" href="{{ path('page_edit', { 'id': page.id }) }}">edit</a>
                      
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

      </div>
  </div>
    
{% endblock %}
