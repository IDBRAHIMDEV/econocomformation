{% extends "PostBundle::base.html.twig" %}



{% block body %}

   <table class="table">
   	<thead>
   		<tr>
   			<th>Title</th>
   			<th>Description</th>
   			<th></th>
   		</tr>
   	</thead>
   	<tbody>

   		{% for category in categories %}
   		<tr>
   			<td>{{ category.title }}</td>
   			<td>{{ category.description }}</td>
   			<td>
   				<a href="" class="btn btn-info">Show</a>
   				<a href="" class="btn btn-warning">Edit</a>
   			</td>
   		</tr>
   		{% endfor %}
   	</tbody>
   </table>

{% endblock %}
