{% extends "PostBundle::base.html.twig" %}

{% block title %}PostBundle:Post:index{% endblock %}

{% block body %}

{% for message in app.session.flashbag.get('success') %}

 <div class="row">
   <div class="col-md-8 col-md-offset-2">
     
     <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
         {{ message }}
      </div>

   </div>
 </div>

{% endfor %}
<h1>le contenu</h1>	

   <div align="right"><a href="{{ path('post-create') }}" class="btn btn-primary">Add</a></div>
    
     <ul class="list-group">
     	{% for post in posts %}
     	  <li class="list-group-item">
     	  	<h2>{{ post.title }}</h2>
     	  	<p>{{ post.content }}</p>
           
           <div align="right">
           	<a href="{{ path('post-show', {'id': loop.index0}) }}" class="btn btn-default">Show</a>
     	  	<a href="" class="btn btn-warning">Edit</a>
     	  	<a href="" class="btn btn-danger">Detete</a>
           </div>
     	  	
     	  </li>
     	{% endfor %}
     </ul>

{% endblock %}
